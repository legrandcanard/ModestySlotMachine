@page "/Settings"
@using ModestySlotMachine.Utill

<h3 class="fw-bold">Settings</h3>

<form class="settings-area row g-3 mt-3">

    <div class="col-lg-3 col-md-12">
        <div class="form-check form-switch">
            <input class="form-check-input" type="checkbox" role="switch" id="sounds">
            <label class="form-check-label" for="sounds">Sounds</label>
        </div>
    </div>
    
    <div class="col-12">
        <label class="form-label" for="displayMode">Display mode</label>
        <select class="form-select" id="displayMode" @onchange="e => SetWindowMode(int.Parse(e.Value as string))">
            <option value="1" selected>Windowed borderless</option>
            <option value="2">Windowed</option>
        </select>
    </div>

    <div class="col-12">
        <label class="form-label" for="selectedDisplay" @nodel>Selected Display</label>
        <select class="form-select" id="selectedDisplay">
            <option value="1" selected>1</option>
            <option value="2">2</option>
        </select>
    </div>

</form>

@code {

    void SetWindowMode(int mode)
    {
        if (mode == 1)
            WindowMode.SetFullScreenWindowMode();
        else
            WindowMode.SetWindowedScreenWindowMode();
    }
}

<style>
    main {
        background: #E3DBDB;
    }
</style>